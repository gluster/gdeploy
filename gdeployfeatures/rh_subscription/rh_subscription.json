{
  "rh_subscription": {
    "action": {
        "register": {
          "options": [
            {
              "required": "true",
              "name": ["username", "activationkey"]
            },
            {
              "required": "true",
              "name": ["password", "activationkey"]
            },
            {
              "required": "false",
              "name": "auto-attach",
              "default": "false"
            },
            {
              "required": "false",
              "name": "pool"
            },
            {
              "required": "false",
              "name": "repos"
            },
            {
              "required": "false",
              "name": "disable-repos",
              "default": "no"
            },
            {
              "required": "false",
              "name": "ignore-register-errors"
            }
          ]
      },
      "attach-pool": {
        "options": [
          {
            "required": "true",
            "name": "pool"
          },
          {
            "required": "false",
            "name": "ignore-attach-pool-errors"
          }
        ]
      },
      "enable-repos": {
        "options": [
          {
            "required": "true",
            "name": "repos"
          },
          {
            "required": "false",
            "name": "ignore-enable-errors"
          }
        ]
      },
      "disable-repos": {
        "options": [
          {
            "required": "false",
            "name": "repos"
          },
          {
            "required": "false",
            "name": "ignore-disable-errors"
          }
        ]
      },
      "unregister": {
        "options": [
          {
            "required": "false",
            "name": "ignore-unregister-errors"
          }
        ]
      }
    }
  }
}

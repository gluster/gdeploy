{
  "nfs_ganesha": {
    "action": {
      "create-cluster": {
        "options": [
          {
            "required": "false",
            "name": "ha-name",
            "default": "ganesha-ha-360"
          },
          {
             "name": "cluster-nodes",
             "required": "true"
          },
          {
              "name": "vip",
              "required": "true"
          },
          {
              "name": "volname",
              "required": "false"
          }
        ]
      },
      "destroy-cluster": {
        "options": [
          {
             "name": "cluster-nodes",
             "required": "true"
          }
        ]
      },
      "add-node": {
          "options": [
          {
              "name": "nodes",
              "required": "true"
          },
          {
              "name": "vip",
              "required": "true"
          }
        ]
      },
      "delete-node": {
          "options": [
          {   "name": "nodes",
              "required": "true"
          }
        ]
      },
      "export-volume": {
          "options": [
          {
              "name": "volname",
              "required": "true"
          }
        ]
      },
      "unexport-volume": {
          "options": [
          {
              "name": "volname",
              "required": "true"
          }
        ]
      },
      "refresh-config": {
        "options": [
          {
            "required": "false",
            "name": "del-config-lines"
          },
          {
             "name": "add-config-lines",
             "required": "false"
          },
          {
              "name": "block-name",
              "required": "false",
              "default": "client"
          },
          {
              "name": "volname",
              "required": "true"
          },
          {
              "name": "ha-conf-dir",
              "required": "false",
              "default": "/etc/ganesha"
          }
        ]
      }
    }
  }
}

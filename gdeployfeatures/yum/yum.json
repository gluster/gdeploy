{
  "yum": {
    "action": {
      "install": {
        "options": [
          {
            "required": "true",
            "name": "packages"
          },
          {
            "required": "false",
            "name": "repos"
          },
          {
            "required": "false",
            "name": "gpgcheck",
            "default": "yes"
          },
          {
            "required": "false",
            "name": "update",
            "default": "yes"
          },
          {
            "required": "false",
            "name": "metadata-clean",
            "default": "no"
          },
          {
            "required": "false",
            "name": "ignore_yum_errors"
          }
        ]
      },
      "remove": {
        "options": [
          {
            "required": "true",
            "name": "packages"
          }
        ]
      }
    }
  }
}
